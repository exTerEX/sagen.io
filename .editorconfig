root = true

[*]
end_of_line = lf
charset = utf-8

[Makefile]
indent_style = tab

[*.yml]
indent_style = space
indent_size = 2

[.{devcontainer,vscode}/**.json]
indent_style = tab
indent_size = 4

[*.md]
trim_trailing_whitespace = false

[*.{html, css}]
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
